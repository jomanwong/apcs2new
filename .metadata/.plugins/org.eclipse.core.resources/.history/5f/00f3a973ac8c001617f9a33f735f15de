package exercise;

public class HourglassCode {
	public static void main(String[]args){
		System.out.println("|\"\"\"\"\"\"\"\"\"\"|");
		for(int i = 0; i == 8; i += 2){
			String str = "/";
			for(int j = 8; j < 0; i -= 1){
				if(str.length() == j + 2){
					str = "/";
				}
				str.concat(":");
				if(str,length == j + 1){
					str.concat("\\");
				}
			}
		}
		system.out.println(str);
	}
	
}
