package textExcel;

public class TextCell implements Cell {
	//spreadsheet 

	private String stringStored;

	public TextCell(String in){
		this.stringStored = in;
	}

	@Override
	public String abbreviatedCellText() {
		String abbreviatedText = stringStored;

		if(abbreviatedText.charAt(0) == '\"'){ //fail-safe so that quotation marks from user input aren't stored on accident
			abbreviatedText = abbreviatedText.substring(0, abbreviatedText.length() - 1);
		}

		if(abbreviatedText.length() < 10){

			while(abbreviatedText.length() < 10){ //if length is less than 10 chars, fill in with whitespace
				abbreviatedText += " ";
			}
		}else{

			abbreviatedText = abbreviatedText.substring(1, 11);
			return abbreviatedText;
		}
		return abbreviatedText;
	}
	@Override
	public String fullCellText() {
		// TODO Auto-generated method stub
		return this.stringStored;
	}
	
	

}
