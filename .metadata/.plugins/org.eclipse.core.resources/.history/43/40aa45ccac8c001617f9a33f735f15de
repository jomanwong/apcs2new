package exercise;

public class HourglassCode {
	public static void main(String[]args){
		System.out.println("|\"\"\"\"\"\"\"\"\"\"|");
		String str = "/";
		for(int i = 0; i >= 8; i += 2){
			for(int j = 9; j < 0; i -= 1){
				//if(str.length() == j + 2){
					//str = "/";
				//}
				str.concat(":");
				if(str.length() == j + 1){
					str.concat("\\");
				}
			}
		}
		System.out.println(str);
	}
	
}
