package pikachu;
import java.util.*;
//Made by Joman Wong, 8/29/16, APCS2
public class Pokemon {
	public static void main(String[]args){
		System.out.println(changePi("x3.14x"));
	}

	public static String changePi(String str){
		String returnThis = "";
		String temp = str;
		if(str.length() <= 2 ){
			if(str.equals("pi")){
				return "3.14";
			}else{
				return str;
			}
		}else if(str.charAt(0) =='p' && str.charAt(1) == 'i'){
			returnThis += "3.14";
			temp = str.substring(2);
			returnThis += changePi(temp);
			return returnThis;
		}else{
			if(temp.length() != 0){
				returnThis += temp.charAt(0);
			}else{
				temp = str.substring(1);
				changePi(temp);
				return returnThis;
			}
			return str;
		}
	}
}
