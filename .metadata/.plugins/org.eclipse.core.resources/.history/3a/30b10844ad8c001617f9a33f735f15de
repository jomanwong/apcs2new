package exercise;

public class HourglassCode {
	public static void main(String[]args){
		System.out.println("|\"\"\"\"\"\"\"\"\"\"|");
		String str = "/";
		str.concat(":");
		for(int i = 0; i < 4; i ++){
			for(int j = 8; j < 0; j -= 2){
				//if(str.length() == j + 2){
					//str = "/";
				//}
				str = str +  ":";
				if(str.length() == j + 1){
					str.concat("\\");
				}
			}
		}
		System.out.println(str);
	}
	
}
